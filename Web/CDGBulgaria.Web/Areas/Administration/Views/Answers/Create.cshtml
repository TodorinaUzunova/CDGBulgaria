@using CDGBulgaria.Services.Models
@using CDGBulgaria.Web.Controllers
@using CDGBulgaria.Services
@using CDGBulgaria.Data
@using CDGBulgaria.Services.Contracts
@using CDGBulgaria.Web.ViewModels.Question
@model CDGBulgaria.Web.InputModels.Answer.AnswerCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
	
}

<h2 class="text-info text-center">Create Answer</h2>

<hr class="hr-2 bg-primary mt-4 text-center w-50">
<form class="mx-auto width w-50" asp-action="Create">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="form-group mx-auto w-45">
		<div class="d-flex justify-content-center">
			<label asp-for="QuestionContent" class="text-primary h5">Question</label>
		</div>
		<select class="form-control text-primary" id="questionContent" asp-for="QuestionContent">
			<option selected disabled>--- Select Question ---</option>
			@foreach (var question in (IEnumerable<AnswerCreateQuestionViewModel>)this.ViewData["questions"])
		{
			@*@if (question.Id == Model.QuestionId && question.Content == Model.QuestionContent)
			{
				<option value="@question.Content" selected>@question.Content</option>
			}
			else
			{*@
				<option value="@question.Content">@question.Content</option>
				<option value="@question.Id">@question.Id</option>
		
		}
		</select>
	</div>
	<div class="form-group mx-auto w-45">
		<div class="d-flex justify-content-center">
			<label asp-for="QuestionId" class="text-primary h5">QuestionId</label>
		</div>
		<select class="form-control text-primary" id="questionContent" asp-for="QuestionId">
			<option selected disabled>--- Select QuestionId ---</option>
			@foreach (var question in (IEnumerable<AnswerCreateQuestionViewModel>)this.ViewData["questions"])
			{
				<option value="@question.Content">@question.Content</option>
				<option value="@question.Id">@question.Id</option>

			}
		</select>
	</div>
	<div class="form-group text-info">
		<label asp-for="Content" class="control-label"></label>
		<input asp-for="Content" class="form-control" placeholder="Content..."/>
		<span asp-validation-for="Content" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="hidden" asp-for="AuthorId" class="form-control" />
		<span asp-validation-for="AuthorId" class="text-danger"></span>
	</div>

	<hr class="hr-2 bg-primary mt-4">
	<div class="form-group d-flex justify-content-center" >
		<input type="submit" value="Create" class="btn btn-primary" />
	</div>
</form>


