@model CDGBulgaria.Web.InputModels.CDGDisease.CDGDiseaseCreateInputModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center text-primary">Add CDGDisease here:</h4>
<hr class="hr-2 bg-primary mt-4 text-center w-50">
<form class="mx-auto width w-50" asp-action="Create">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="Name" class="control-label text-primary" ></label>
		<input asp-for="Name" class="form-control" placeholder="Name..."/>
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description" class="control-label text-primary"></label>
		<textarea asp-for="Description" class="form-control" placeholder="Description..."></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<hr class="hr-2 bg-primary mt-4 text-center">
	<div class="form-group text-center">
		<input type="submit" value="Add" class="btn btn-primary" />
	</div>
</form>


